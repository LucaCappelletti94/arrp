{
    "balance":{
        "class_balancing": {
            "A-E": 1,
            "A-P": 1,
            "A-X": 1,
            "I-E": 2,
            "I-P": 2,
            "I-X": 1,
            "UK": 10
        },
        "max":3000
    },
    "genome": "hg19",
    "holdouts":{
        "test_sizes":[0.3, 0.1],
        "quantities":[3, 5]
    },
    "random_seed":42,
    "training":{
        "fit":{
            "epochs":1000,
            "batch_size":1000
        },
        "early_stopping":{
            "monitor":"auprc",
            "min_delta":0.001,
            "patience":10,
            "mode":"max",
            "verbose":0,
            "restore_best_weights":true
        },
        "plateau":{
            "monitor":"auprc",
            "factor":0.1,
            "patience":5,
            "mode":"max",
            "min_delta":0.005,
            "cooldown":0,
            "min_lr":0.001,
            "verbose":0
        }
    },
    "gaussian_process":{
        "monitor":"val_auprc",
        "tune":{
            "acq_func":"gp_hedge",
            "n_calls":1,
            "n_random_starts":1,
            "random_state":42    
        },
        "early_stopping":{
            "delta":0.001,
            "n_best":10
        }
    },
    "tasks": [
        {
            "name": "Active enhancers vs active promoters",
            "positive": [
                "A-E"
            ],
            "negative": [
                "A-P"
            ],
            "balancing": {
                "umbalanced": true,
                "balanced": true,
                "full_balanced": true
            }
        },
        {
            "name":"Active promoters vs inactive promoters",
            "positive": [
                "A-P"
            ],
            "negative": [
                "I-P"
            ],
            "balancing": {
                "umbalanced": true,
                "balanced": true,
                "full_balanced": true
            }
        },
        {
            "name":"Active enhancers vs inactive enhancers",
            "positive": [
                "A-E"
            ],
            "negative": [
                "I-E"
            ],
            "balancing": {
                "umbalanced": true,
                "balanced": true,
                "full_balanced": true
            }
        },
        {
            "name":"Inactive enhancers vs inactive promoters",
            "positive": [
                "I-E"
            ],
            "negative": [
                "I-P"
            ],
            "balancing": {
                "umbalanced": true,
                "balanced": true,
                "full_balanced": true
            }
        },
        {
            "name":"Active enhancers and promoters vs anything else",
            "positive": [
                "A-E",
                "A-P"
            ],
            "negative": [
                "A-X",
                "I-E",
                "I-P",
                "I-X",
                "UK"
            ],
            "balancing": {
                "umbalanced": true,
                "balanced": true,
                "full_balanced": false
            }
        }
    ]
}